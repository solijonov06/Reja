<!DOCTYPE html> 
<html lang="en">    
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- ✅ Correct Bootstrap CDN link -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" 
    crossorigin="anonymous"
    />

  <title>Portfolio</title>
</head>
<body style="background-color: #a3b5c8;">
  <div class="container">
    <h1 class="display-4 text-center py-1">Plans and Aims</h1>

    <div class="jumbotron p-3 shadow-sm">
      <!-- ❌ ID had a trailing space (causes bugs) -->
      <form id="create-form" action="/create-item" method="POST">
        <div class="d-flex align-items-center">
          <input type="text" 
                 class="form-control me-3" 
                 id="create-field"
                 name="reja" 
                 style="flex: 1;" 
                 autofocus 
                 autocomplete="off">
          <button class="btn btn-primary">Add New Plan</button>  
        </div>
      </form> <!-- ✅ You forgot to close the form -->
    </div>
    

    <ul id="item-list" class="list-group pb-5">
      <%items.map(function(item){%>
      <li
        class="list-group-item list-group-item-info d-flex align-items-center justify-content-between">
      <span class="item-text"> <%= item.reja%></span>
      <div>
        <button  class="edit-me btn btn-secondary btn-sm mr-1">
          Change          
        </button>
        <button data-id="<%=item._id%>" id="clean-all" class="btn btn-danger " style="border-radius: 20px">Clean All Plans</button>
      </div>
      

      </li>
      <% }) %>
    </ul>
    

  </div>

  <!-- ✅ Optional: Bootstrap JS (only needed for interactive components) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-qI1PwuTrvraW8n+4knF6YhRk8zHkz3lRgkToDn9f2KEz8vhW8D2Vm3m+kAE9CUGX" 
    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>
</html>
